<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gondilaszlo_javafxrestclient.BusController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertClick" text="Insert" />
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateClick" text="Update" />
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteClick" text="Delete" />
            </children>
        </HBox>
        <TableView fx:id="busTable" prefHeight="600.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="busCol" minWidth="200.0" prefWidth="300.0" text="Bus License Plate" />
                <TableColumn fx:id="delayCol" minWidth="50.0" prefWidth="200.0" text="Delay" />
                <TableColumn fx:id="destCol" minWidth="200.0" prefWidth="300.0" text="Destination" />
            </columns>
        </TableView>
    </children>
</VBox>
